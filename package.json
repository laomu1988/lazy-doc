{
  "name": "lazy-doc",
  "version": "0.1.8",
  "description": "懒人文档生成工具,js代码自动生成文档",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc src/*.ts --outDir lib",
    "release4": "standard-version --prerelease",
    "release3": "standard-version --release-as patch",
    "release2": "standard-version --release-as minor",
    "release1": "standard-version --release-as major",
    "release": "standard-version",
    "doc": "npm run build && node test/readme.js",
    "test": "jest"
  },
  "jest": {
    "testMatch": ["**/*.test.[jt]s?(x)"], 
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "./test/transform.js"
    }
  },
  "keywords": [
    "doc",
    "lazy-doc",
    "fe-doc",
    "jsdoc"
  ],
  "author": "laomu1988@qq.com",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^11.9.4",
    "filter-files": "^0.4.0",
    "mk-dir": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laomu1988/lazy-doc.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commitmsg": "npm run doc && commitlint -E GIT_PARAMS"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "standard-version": "^5.0.0",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-jest": "^24.1.0",
    "jest": "^24.1.0"
  }
}
